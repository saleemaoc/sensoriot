<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="10dp"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer" />

        <CheckBox
            android:id="@+id/check_accel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="checkSelected" />

        <TextView
            android:id="@+id/label_gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_accel"
            android:text="Gyrometer" />

        <CheckBox
            android:id="@+id/check_gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/check_accel"
            android:onClick="checkSelected" />

        <TextView
            android:id="@+id/label_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_gyro"
            android:text="GPS" />

        <CheckBox
            android:id="@+id/check_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/check_gyro"
            android:onClick="checkSelected" />

        <TextView
            android:id="@+id/label_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_gps"
            android:text="Orientation" />

        <CheckBox
            android:id="@+id/check_orientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/check_gps"
            android:onClick="checkSelected" />

        <TextView
            android:id="@+id/label_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_orientation"
            android:text="Rotation" />

        <CheckBox
            android:id="@+id/check_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/check_orientation"
            android:onClick="checkSelected" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>